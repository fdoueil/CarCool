<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>Car-Cool</display-name>
  <security-constraint>
    <display-name>Securite_utilisateurs_authentifies</display-name>
    <web-resource-collection>
      <web-resource-name>Ressources protégées par authentification</web-resource-name>
      <description> Ressources réservées aux personnes enregistrées </description>
      <url-pattern> /deleteUser </url-pattern>
      <url-pattern> /updateUser </url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>authentifies</role-name>
    </auth-constraint>
  </security-constraint>
  <login-config>
    <auth-method>FORM</auth-method>
    <realm-name>Identifiants</realm-name>
    <form-login-config>
      <form-login-page>/authentification.jsp</form-login-page>
      <form-error-page>/authentification_error.jsp</form-error-page>
    </form-login-config>
  </login-config>

